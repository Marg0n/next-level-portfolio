{
  "compilerOptions": {
    /* Target & Modules */
    "target": "ESNext",         // 1. Upgrade from ES2017
    "module": "ESNext",
    "moduleResolution": "Bundler", // 2. Optimal for Turbopack & Bun
    "lib": ["dom", "dom.iterable", "esnext"],
    
    /* Strictness & Safety */
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    
    /* JSX & Framework Specifics */
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { 
        "name": "next" 
        }
      ],
    
    /* Path Aliases */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
